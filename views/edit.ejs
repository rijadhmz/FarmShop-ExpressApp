<%- include('../partials/navbar'); %>

<div id='product-edit' class="container">

    <div id="product-edit-title" class="container text-center">
        <h2 id="product-edit-name">Edit product:</h2>
        <p id="product-edit-id"> Product id: <%= product['_id'] %> </p>
    </div>

    <form id="product-edit-form" action='/<%= product['_id'] %>?_method=PUT' method="POST">
        <div class="form-group">
          <label for="name-edit">Name:</label>
          <input type="text" class="form-control" name="name" id="name-edit" placeholder="Enter a name" value="<%= product.name %>" required>
        </div>
        <div class="form-group">
            <label for="price-value">Price:</label>
            <input type="number" class="form-control" name="price" id="price-edit" placeholder="Enter a price" value="<%= product.price %>" step="any" required>
          </div>
        <div class="form-group">
          <label for="categories-list">Category:</label>
          <select class="form-control" name="category" id="categories-list-edit" required>
            <% if(product.category === 'fruit') { %>
                <option selected>Fruit</option>
                <option>Vegetable</option>
                <option>Dairy</option>
            <% } else if (product.category === 'vegetable') { %>
                <option>Fruit</option>
                <option selected>Vegetable</option>
                <option>Dairy</option>
            <% } else { %>
                <option>Fruit</option>
                <option>Vegetable</option>
                <option selected>Dairy</option>
            <% } %>

          </select>
          <div class="container text-center mt-5">
            <button id="edit-button" type="submit" class="btn btn-md me-1">Save</button>
            <a href="/<%= product['_id']%>/details" class="btn btn-md cancel-goback" role="button">Cancel</a>
          </div>
        </div>   
      </form>

</div>

<%- include('../partials/footer'); %>
